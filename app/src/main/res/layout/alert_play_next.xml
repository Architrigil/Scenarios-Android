<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="#60e3a844">

    <TextView
        android:id="@+id/tv_correct_incorrect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/score"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_score_alert"
        android:layout_margin="10dp"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/score"
        android:layout_marginTop="@dimen/margin_play_next_button"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_correct_incorrect" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_play_next_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_score">

        <Button
            android:id="@+id/btn_replay_alert"
            style="@style/GameOptionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/replay" />

        <Button
            android:id="@+id/btn_end_game_alert"
            style="@style/GameOptionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/end_game" />
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>